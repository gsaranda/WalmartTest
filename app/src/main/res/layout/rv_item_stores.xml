<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/single_color_bordered_drawable"
        android:layout_margin="@dimen/margin_bordered_images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_item_background"
        app:layout_constraintTop_toTopOf="@+id/iv_item_background"
        app:layout_constraintEnd_toEndOf="@id/iv_item_background"
        />

    <TextView
        android:id="@+id/tv_item_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_item_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_name"
        app:layout_constraintEnd_toEndOf="@id/iv_item_background"
        />





</androidx.constraintlayout.widget.ConstraintLayout>